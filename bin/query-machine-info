#!/bin/bash
filename="/run/pve/query-machine-info"
cpuname=$(lscpu|grep "BIOS Model name"|cut -d ":" -f2|xargs)
if [ -z "$cpuname" ];then
        cpuname=$(lscpu|grep "Model name"|grep -v 'BIOS'|cut -d ":" -f2|xargs)
	if [ -z "$cpuname" ];then
		cpuname="unknow"
	fi
fi
dmidecode | jc --dmidecode | jq --arg cpu "$cpuname" '. += [{"cpu": $cpu}]' >$filename
